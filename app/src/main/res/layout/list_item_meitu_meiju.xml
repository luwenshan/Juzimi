<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_meitu_meiju"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#CCFFFFFF"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <!--设置点击时的波纹效果
    ?android:attr/selectableItemBackground      波纹有边界
    ?android:attr/selectableItemBackgroundBorderless    波纹超出边界
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2FFFFFF"
        android:orientation="vertical">

        <com.lws.juzimi.widget.ShowMaxImageView
            android:id="@+id/image_view_meitu_meiju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_meitu_meiju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:padding="10dp"
            android:text="描述"
            android:textColor="#333333"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>